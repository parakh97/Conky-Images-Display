#!en;@PACKAGE_VERSION@
######## This is the conf file of cid, released under the GPL.##########

# leave blank to use the cid defaults parameters

#############################################
############# BEHAVIOUR OPTIONS #############
#############################################

#[gtk-fullscreen]
[Behaviour]

#F-[Position on the screen;gtk-fullscreen]
frame_1=

#i[0;2048] Position X :
#{in pixels}
GAP_X=0

#i[0;2048] Position Y :
#{in pixels}
GAP_Y=0

#i[50;175] Width :
#{in pixels}
SIZE_X=150

#i[50;175] Height :
#{in pixels}
SIZE_Y=150

#b Display CID on all Dekstop :
ALL_DESKTOP=

#b Lock CID position :
#{You can still move it with ALT + left_clic. This will disable the play/pause command.}
LOCK=



#v-
h_separator1=



#F+[Style;gtk-select-color]
frame_colors=

#e-[-360;360] Rotation of CID :
#{in degree}
ROTATION=0

#b Keep corners during rotate :
KEEP_CORNERS=

#c+4[0;1] Color of the background (r,g,b,a) :
COLOR=1;1;1;0.2;

#tc+4[0;1] Idem when the mouse is over :
FLYING_COLOR=0;0;0;0.7;

##########################################
############# SYSTEM OPTIONS #############
##########################################

#[gtk-preferences]
[System]

#F+[Monitoring player options;gtk-preferences]
frame_2=

#r[Rhythmbox;Amarok] Wich player you want to monitor :
PLAYER=rhythmbox

#i Interval between two refresh :
#{in seconds. Doesn't matter for rhythmbox support.}
INTER=5

#b Allow CID to monitor your player :
#{Contextual menu in right clic. Play/Pause by left clicking. Next by middle clicking.}
MONITOR=

##########################################
############## CID OPTIONS ###############
##########################################

#[@prefix@/@DATADIRNAME@/@PACKAGE@/options.png]
[Options]

#F+[Customisation options;@prefix@/@DATADIRNAME@/@PACKAGE@/options.png]
frame_3=

#S+ Default image :
#{Instead of the beautiful CD.}
IMAGE=

#b Hide CID when the player isn't running :
HIDE=



#v-
h_separator2=


#F+[Animation;@prefix@/@DATADIRNAME@/@PACKAGE@/animation.png]
frame_animation=

#b Run an animation when the music change :
ANIMATION=

#r[Rotate] Animation to use :
ANIMATION_TYPE=0

#b Use threaded animations :
#{This can not work properly depending your processor.}
THREAD=



#v-
h_separator3=



#X+[Downloads;gtk-convert]
frame_launcher =

#b Allow CID to download missing covers :
#{You need to be connected to the Internet.}
DOWNLOAD=

#i[0;15] Delay before checking for missing covers :
#{in seconds}
DELAY=3

#r[Medium;Large] Size of the downloaded covers :
#{The smaller image will be downloaded faster than a big one.}
D_SIZE=



#X+
frame_sep_ =



#tv-
h_separator4=



#tb Active unstable functions :
B_UNSTABLE=
