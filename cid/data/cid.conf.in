# leave blank to use the cid defaults parameters
# use the cid configuration panel to edit it (with cid -e for instance)
# DO NOT EDIT THIS FILE UNLESS YOU KNOW WHAT YOU ARE DOING !

#############################################
############# BEHAVIOUR OPTIONS #############
#############################################

#[gtk-fullscreen]
[Behaviour]

#F-[Position on the screen;gtk-fullscreen]
frame_1=

#i Position X
#{in pixels}
GAP_X=0

#i Position Y
#{in pixels}
GAP_Y=0

#j+[50;1024] Size (Width x Height)
#{in pixels}
SIZE=150;150

#b Display CID on all Dekstop
ALL_DESKTOP=

#b Lock CID position
#{You can still move it with ALT + left_clic depending your window manager.}
LOCK=

#b Keep above on mouse hovering
SWITCH_ABOVE=

#F+[Style;gtk-select-color]
frame_colors=

#I-[-360;360] Rotation of CID
#{in degree}
ROTATION=0

#b Keep corners during rotate
KEEP_CORNERS=

#c+4[0;1] Color of the background (r,g,b,a)
COLOR=1;1;1;0.2;

#c+4[0;1] Color of the mask when the mouse is over
FLYING_COLOR=0;0;0;0.7;

#b Show the mask over the image
MASK=


##########################################
############# SYSTEM OPTIONS #############
##########################################

#[gtk-preferences]
[System]

#F+[Monitoring player options;gtk-preferences]
frame_2=

#r[None;Rhythmbox;Amarok;Exaile;Amarok 2] Wich player you want to monitor
PLAYER=0

#i[1;30] Interval between two refresh
#{in seconds. Doesn't matter for rhythmbox supports.}
INTER=5

#b Allow CID to monitor your player
#{Contextual menu in right clic. Play/Pause by left clicking. Next by middle clicking.}
MONITOR=

#b Display the controls
CONTROLS=

#b Give the play/pause status
STATE=

#r[White;Yellow;Red] Status symbols color
SYMBOL_COLOR=


#tX+[Display Title;gtk-select-color]
frame_title =

#tb Display song's name
TITLE=

#ti[5;20] Size of the police
POLICE_SIZE=15

#tc+4[0;1] Color of the text
POLICE_COLOR=1;1;1;1;

#tc+4[0;1] Color of outline's text
OUTLINE_COLOR=0;0;0;0.5;


##########################################
############## CID OPTIONS ###############
##########################################

#[@prefix@/@DATADIRNAME@/@PACKAGE@/options.png]
[Options]

#F+[Customisation options;@prefix@/@DATADIRNAME@/@PACKAGE@/options.png]
frame_3=

#S+ Default image
#{Instead of the wonderful CD.}
IMAGE=

#b Hide CID when the player isn't running
HIDE=



#F+[Animation;@prefix@/@DATADIRNAME@/@PACKAGE@/animation.png]
frame_animation=

#b Run an animation when the music changes
ANIMATION=

#r[Rotate;Fade in out;Diapositive] Animation to use
ANIMATION_TYPE=0

#I-[1;10] Animation speed
ANIMATION_SPEED=1

#b Use threaded animations
#{This can not work properly depending your processor.}
THREAD=




#X+[Downloads;gtk-convert]
frame_launcher =

#b Allow CID to download missing covers
#{You need to be connected to the Internet.}
DOWNLOAD=

#i[0;15] Delay before checking for missing covers
#{in seconds}
DELAY=3

#r[Medium;Large] Size of the downloaded covers
#{A small image will be downloaded faster than a big one.}
D_SIZE=



#X+
frame_sep_ =




#tb Active unstable functions
B_UNSTABLE=
